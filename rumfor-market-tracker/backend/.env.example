# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rumfor-market-tracker
DB_NAME=rumfor-market-tracker

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration
# Encryption key for storing SMTP passwords securely (32+ characters recommended)
EMAIL_ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# Fallback SMTP Configuration (used if database config not set)
# For rumfor.com production use:
SMTP_HOST=rumfor.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@rumfor.com
SMTP_PASS=your-smtp-password

# Email Sender Configuration
EMAIL_FROM=noreply@rumfor.com
EMAIL_FROM_NAME=RumFor Market Tracker
EMAIL_REPLY_TO=support@rumfor.com

# Support Configuration
SUPPORT_EMAIL=support@rumfor.com

# Legacy support for development (Gmail, etc.)
# EMAIL_SERVICE=gmail
# EMAIL_APP_PASS=your-gmail-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100