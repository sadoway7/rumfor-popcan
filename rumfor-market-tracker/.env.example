# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
VITE_APP_NAME=Rumfor Market Tracker
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Authentication Configuration
VITE_AUTH_DOMAIN=your-auth-domain.auth0.com
VITE_AUTH_CLIENT_ID=your-auth-client-id
VITE_AUTH_AUDIENCE=your-auth-audience

# Database Configuration
DATABASE_URL=postgresql://rumfor_user:secure_password_123@localhost:5432/rumfor_market_tracker

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Third-party Services
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_ANALYTICS_ID=your-analytics-id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false

# Debug Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Security Configuration
VITE_SENTRY_DSN=your-sentry-dsn
VITE_INTERCOM_APP_ID=your-intercom-app-id

# Deployment Configuration
DEPLOY_ENVIRONMENT=development
DEPLOY_URL=http://localhost:3000

# Docker Configuration
DB_PASSWORD=secure_password_123

# GitLab CI/CD Configuration
GITLAB_PAGES_URL=https://your-project.gitlab.io
DEPLOYMENT_TOKEN=your-deployment-token

# Security Keys (Generate strong random values)
JWT_SECRET=your-jwt-secret-key
API_SECRET_KEY=your-api-secret-key