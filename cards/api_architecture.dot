digraph APIArchitecture {
    // Backend API Architecture
    "ROOT" [label="API Architecture\nExpress.js + MongoDB\nRESTful Endpoints", type="root"];

    "ROOT" -> "Authentication";
    "ROOT" -> "UserManagement";
    "ROOT" -> "MarketManagement";
    "ROOT" -> "ApplicationManagement";
    "ROOT" -> "ContentManagement";
    "ROOT" -> "AdminOperations";

    // Authentication APIs
    "Authentication" [
        label="Authentication APIs\nJWT + Role-Based Access\n/auth/*",
        type="category",
        prompt="Implement secure authentication endpoints with JWT tokens, role validation, and session management."
    ];

    "Authentication" -> "AuthLogin";
    "Authentication" -> "AuthRegister";
    "Authentication" -> "AuthRefresh";
    "Authentication" -> "AuthRecovery";
    "Authentication" -> "AuthVerification";
    "Authentication" -> "AuthLogout";

    "AuthLogin" [label="POST /auth/login", type="card", prompt="User login with email/password, return JWT token and refresh token."];
    "AuthRegister" [label="POST /auth/register", type="card", prompt="User registration with validation, role selection, email verification trigger."];
    "AuthRefresh" [label="POST /auth/refresh", type="card", prompt="Refresh JWT token using refresh token with proper expiration handling."];
    "AuthRecovery" [label="POST /auth/recovery", type="card", prompt="Password recovery with email token generation and secure reset flow."];
    "AuthVerification" [label="POST /auth/verify", type="card", prompt="Email verification with token validation and account activation."];
    "AuthLogout" [label="POST /auth/logout", type="card", prompt="Token invalidation and secure logout with refresh token cleanup."];

    // User Management APIs
    "UserManagement" [
        label="User Management\nProfile & Accounts\n/users/*",
        type="category",
        prompt="Build comprehensive user management APIs for profile management, account settings, and user data."
    ];

    "UserManagement" -> "UserProfile";
    "UserManagement" -> "UserSettings";
    "UserManagement" -> "UserFavorites";
    "UserManagement" -> "UserSearch";

    "UserProfile" [label="Profile APIs", type="card", prompt="GET/PUT /users/profile, PATCH /users/avatar, profile management with image upload."];
    "UserSettings" [label="Settings APIs", type="card", prompt="GET/PUT /users/settings for notifications, privacy, preferences."];
    "UserFavorites" [label="Favorites APIs", type="card", prompt="POST/DELETE /users/favorites, GET /users/favorites/markets for saved markets."];
    "UserSearch" [label="User Search", type="card", prompt="GET /users/search for finding vendors, promoters, admin user discovery."];

    // Market Management APIs
    "MarketManagement" [
        label="Market APIs\nSearch & Discovery\n/markets/*",
        type="category",
        prompt="Create comprehensive market management with search, filtering, CRUD operations, and discovery features."
    ];

    "MarketManagement" -> "MarketCRUD";
    "MarketManagement" -> "MarketSearch";
    "MarketManagement" -> "MarketAnalytics";
    "MarketManagement" -> "MarketCalendar";

    "MarketCRUD" [label="Market CRUD", type="card", prompt="POST/PUT/PATCH/DELETE /markets, full market lifecycle management for promoters."];
    "MarketSearch" [label="Market Search", type="card", prompt="GET /markets/search with advanced filtering, location search, category filtering."];
    "MarketAnalytics" [label="Market Analytics", type="card", prompt="GET /markets/:id/analytics, vendor counts, attendance tracking, performance metrics."];
    "MarketCalendar" [label="Calendar APIs", type="card", prompt="GET /markets/calendar, GET /markets/upcoming for scheduling and event planning."];

    // Application Management APIs
    "ApplicationManagement" [
        label="Application APIs\nVendor Applications\n/applications/*",
        type="category",
        prompt="Build application submission, review, and management system with file uploads and workflow tracking."
    ];

    "ApplicationManagement" -> "ApplicationSubmission";
    "ApplicationManagement" -> "ApplicationReview";
    "ApplicationManagement" -> "FileManagement";
    "ApplicationManagement" -> "ApplicationTracking";

    "ApplicationSubmission" [label="Application Submit", type="card", prompt="POST /applications, multi-step form submission with validation and file uploads."];
    "ApplicationReview" [label="Admin Review", type="card", prompt="PUT /applications/:id/review, approval/rejection workflow with comments."];
    "FileManagement" [label="File Upload/Download", type="card", prompt="POST /applications/:id/files, GET /applications/:id/files/* for secure document handling."];
    "ApplicationTracking" [label="Status Tracking", type="card", prompt="GET /applications/:id/status, GET /users/applications for vendor status monitoring."];

    // Content Management APIs
    "ContentManagement" [
        label="Content APIs\nComments & Photos\n/content/*",
        type="category",
        prompt="Implement social features with comments, photo sharing, and community content management."
    ];

    "ContentManagement" -> "Comments";
    "ContentManagement" -> "Photos";
    "ContentManagement" -> "Hashtags";
    "ContentManagement" -> "Moderation";

    "Comments" [label="Comment APIs", type="card", prompt="POST/GET/PUT/DELETE /markets/:id/comments, threaded discussions with moderation."];
    "Photos" [label="Photo APIs", type="card", prompt="POST/GET/DELETE /markets/:id/photos, image upload, gallery management, lazy loading."];
    "Hashtags" [label="Hashtag APIs", type="card", prompt="GET /hashtags/trending, POST /hashtags/vote for social features and trending content."];
    "Moderation" [label="Content Moderation", type="card", prompt="PUT /content/:id/moderate, admin tools for content review and community standards."];

    // Admin Operations APIs
    "AdminOperations" [
        label="Admin APIs\nPlatform Management\n/admin/*",
        type="category",
        prompt="Create administrative APIs for platform oversight, user management, analytics, and operational control."
    ];

    "AdminOperations" -> "UserAdmin";
    "AdminOperations" -> "MarketAdmin";
    "AdminOperations" -> "ApplicationAdmin";
    "AdminOperations" -> "PlatformAdmin";

    "UserAdmin" [label="User Administration", type="card", prompt="GET/PUT/DELETE /admin/users, role management, account controls, user statistics."];
    "MarketAdmin" [label="Market Administration", type="card", prompt="GET/PUT/DELETE /admin/markets, quality control, promoter support, market oversight."];
    "ApplicationAdmin" [label="Application Admin", type="card", prompt="GET /admin/applications, bulk operations, workflow management, approval queues."];
    "PlatformAdmin" [label="Platform Management", type="card", prompt="GET /admin/analytics, GET /admin/health, system monitoring, configuration management."];
}