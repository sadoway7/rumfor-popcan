digraph ComponentArchitecture {
    // Frontend Component Architecture
    "ROOT" [label="Component Architecture\nReact 18 + TypeScript + Zustand", type="root"];

    "ROOT" -> "Pages";
    "ROOT" -> "Layouts";
    "ROOT" -> "Components";
    "ROOT" -> "Features";

    // Pages (Top-level routes)
    "Pages" [
        label="Pages\nRoute Components\n27+ Pages",
        type="category",
        prompt="Build all page components with proper routing, layouts, and role-based access."
    ];

    "Pages" -> "AuthPages";
    "Pages" -> "MarketPages";
    "Pages" -> "ApplicationPages";
    "Pages" -> "AdminPages";
    "Pages" -> "PromoterPages";
    "Pages" -> "UtilityPages";

    "AuthPages" [label="Authentication Pages", type="card", prompt="LoginPage, RegisterPage, EmailVerificationPage, PasswordRecoveryPage with proper form validation."];
    "MarketPages" [label="Market Pages", type="card", prompt="HomePage, MarketSearchPage, MarketDetailPage, MyMarketsPage with filtering and search functionality."];
    "ApplicationPages" [label="Application Pages", type="card", prompt="ApplicationFormPage, ApplicationDetailPage, MyApplicationsPage with multi-step flows."];
    "AdminPages" [label="Admin Pages", type="card", prompt="AdminDashboardPage, AdminUsersPage, AdminApplicationsPage, AdminMarketsPage, AdminAnalyticsPage, AdminSupportPage."];
    "PromoterPages" [label="Promoter Pages", type="card", prompt="PromoterDashboardPage, PromoterCreateMarketPage, PromoterMarketsPage, PromoterApplicationsPage, PromoterAnalyticsPage."];
    "UtilityPages" [label="Utility Pages", type="card", prompt="AboutPage, ContactPage, ProfilePage, SettingsPage, NotificationsPage, DashboardRedirectPage."];

    // Layout Components
    "Layouts" [
        label="Layouts\nPage Structure\nRole-Based Layouts",
        type="category",
        prompt="Create layout components that provide consistent structure and navigation across different user roles."
    ];

    "Layouts" -> "MainLayout";
    "Layouts" -> "AuthLayout";
    "Layouts" -> "AdminLayout";
    "Layouts" -> "DashboardLayout";
    "Layouts" -> "PromoterLayout";

    "MainLayout" [label="Main Layout", type="card", prompt="Build responsive layout with Header, Sidebar, Footer, BottomNav components for general users."];
    "AuthLayout" [label="Authentication Layout", type="card", prompt="Create clean auth layout with branding and proper spacing for login/registration flows."];
    "AdminLayout" [label="Admin Layout", type="card", prompt="Build admin-specific layout with navigation sidebar, header stats, and admin-only features."];
    "DashboardLayout" [label="Dashboard Layout", type="card", prompt="Create dashboard layout with customizable panels and widgets for vendors/promoters."];
    "PromoterLayout" [label="Promoter Layout", type="card", prompt="Build promoter-specific layout with market management tools and organizer features."];

    // Reusable Components
    "Components" [
        label="Reusable Components\nUI Library\n70+ Components",
        type="category",
        prompt="Build comprehensive component library with consistent styling, accessibility, and reusability."
    ];

    "Components" -> "FormComponents";
    "Components" -> "DataDisplay";
    "Components" -> "Navigation";
    "Components" -> "Feedback";
    "Components" -> "Media";

    "FormComponents" [label="Form Components", type="card", prompt="ApplicationForm, ExpenseForm, TodoForm, PhotoUploader with React Hook Form + Zod validation."];
    "DataDisplay" [label="Data Components", type="card", prompt="MarketGrid, ApplicationCard, ExpenseItem, TodoItem, NotificationBell with sorting and pagination."];
    "Navigation" [label="Navigation", type="card", prompt="Sidebar, Header, BottomNav, Breadcrumb components with responsive behavior."];
    "Feedback" [label="Feedback Components", type="card", prompt="Alert, Progress, Loader, Tooltip, Tabs with Radix UI primitives."];
    "Media" [label="Media Components", type="card", prompt="PhotoGallery, PhotoThumbnail, PhotoUploader, MarketCalendar with lazy loading."];

    // Feature Modules
    "Features" [
        label="Feature Modules\nState Management\n8 Feature Stores",
        type="category",
        prompt="Organize application logic into feature-based modules with Zustand stores and custom hooks."
    ];

    "Features" -> "AuthFeature";
    "Features" -> "MarketsFeature";
    "Features" -> "ApplicationsFeature";
    "Features" -> "AdminFeature";
    "Features" -> "ThemeFeature";
    "Features" -> "NotificationsFeature";
    "Features" -> "TrackingFeature";

    "AuthFeature" [label="Authentication", type="card", prompt="Auth store, AuthApi, useAuth hook with JWT management and role-based access."];
    "MarketsFeature" [label="Markets", type="card", prompt="Markets store, MarketsApi, useMarkets hook for search, filtering, and favorites."];
    "ApplicationsFeature" [label="Applications", type="card", prompt="Applications store, ApplicationsApi, useApplications hook for form management and tracking."];
    "AdminFeature" [label="Admin Tools", type="card", prompt="Admin store, AdminApi, useAdmin hook for user management and platform oversight."];
    "ThemeFeature" [label="Theme System", type="card", prompt="ThemeStore, useTheme hook for dark/light mode, responsive breakpoints."];
    "NotificationsFeature" [label="Notifications", type="card", prompt="Notifications store, useNotifications hook for real-time updates and alerts."];
    "TrackingFeature" [label="Business Tracking", type="card", prompt="Tracking store (todos/expenses), TrackingApi, useTodos/useExpenses hooks."];
}