digraph TechnicalArchitecture {
    // Technical stack overview
    "ROOT" [label="Technical Stack", type="root"];

    "ROOT" -> "Frontend";
    "ROOT" -> "Backend";
    "ROOT" -> "Database";
    "ROOT" -> "Infrastructure";

    // Frontend architecture
    "Frontend" [
        label="Frontend\nReact + TypeScript",
        type="category",
        prompt="Maintain modern React 18 application with TypeScript, optimized build process, and consistent component architecture."
    ];

    "Frontend" -> "ReactCore";
    "Frontend" -> "StateManagement";
    "Frontend" -> "Routing";
    "Frontend" -> "Styling";
    "Frontend" -> "BuildSystem";

    "ReactCore" [label="React 18 + TypeScript", type="card", prompt="Ensure React 18 features, TypeScript strict mode, and proper component patterns are consistently implemented."];
    "StateManagement" [label="Zustand + TanStack Query", type="card", prompt="Maintain consistent state management patterns with Zustand stores and TanStack Query for server state."];
    "Routing" [label="React Router v6", type="card", prompt="Ensure proper route protection, lazy loading, and navigation patterns across the application."];
    "Styling" [label="UnoCSS + Tailwind", type="card", prompt="Maintain consistent styling with UnoCSS utilities, Tailwind classes, and design system tokens."];
    "BuildSystem" [label="Vite 4 + Optimization", type="card", prompt="Ensure Vite build optimization, code splitting, and performance optimizations are active."];

    // Backend architecture
    "Backend" [
        label="Backend\nNode.js + Express",
        type="category",
        prompt="Maintain secure and scalable Node.js/Express API with proper middleware, validation, and database integration."
    ];

    "Backend" -> "ExpressAPI";
    "Backend" -> "Authentication";
    "Backend" -> "Validation";
    "Backend" -> "Security";
    "Backend" -> "FileHandling";

    "ExpressAPI" [label="Express.js Architecture", type="card", prompt="Maintain clean API structure with proper route organization, middleware stack, and error handling."];
    "Authentication" [label="JWT Authentication", type="card", prompt="Ensure secure JWT implementation with proper token refresh, role-based access, and session management."];
    "Validation" [label="Input Validation", type="card", prompt="Maintain comprehensive input validation using Zod schemas and Express-validator middleware."];
    "Security" [label="Security Middleware", type="card", prompt="Ensure Helmet, CORS, CSRF protection, and rate limiting are properly configured and active."];
    "FileHandling" [label="File Upload System", type="card", prompt="Maintain secure file upload handling with Multer, validation, and storage optimization."];

    // Database architecture
    "Database" [
        label="Database\nMongoDB Atlas",
        type="category",
        prompt="Ensure MongoDB Atlas connectivity, data modeling, indexing, and query optimization for scalable performance."
    ];

    "Database" -> "Connection";
    "Database" -> "Models";
    "Database" -> "Indexing";
    "Database" -> "Migrations";

    "Connection" [label="MongoDB Connection", type="card", prompt="Maintain stable MongoDB Atlas connection with proper error handling and connection pooling."];
    "Models" [label="Data Models", type="card", prompt="Ensure Mongoose schemas are properly defined with validation, relationships, and business logic."];
    "Indexing" [label="Database Indexing", type="card", prompt="Maintain optimal database indexes for query performance and search functionality."];
    "Migrations" [label="Data Migrations", type="card", prompt="Implement safe data migration patterns for schema changes and data updates."];

    // Infrastructure
    "Infrastructure" [
        label="Infrastructure\nCI/CD + Deployment",
        type="category",
        prompt="Maintain reliable CI/CD pipelines, deployment automation, and production monitoring systems."
    ];

    "Infrastructure" -> "GitLabCI";
    "Infrastructure" -> "Testing";
    "Infrastructure" -> "Deployment";
    "Infrastructure" -> "Monitoring";

    "GitLabCI" [label="GitLab CI/CD", type="card", prompt="Maintain efficient CI/CD pipelines with proper testing, building, and deployment stages."];
    "Testing" [label="Testing Framework", type="card", prompt="Ensure comprehensive testing with Playwright E2E tests, integration tests, and quality gates."];
    "Deployment" [label="Deployment Pipeline", type="card", prompt="Maintain automated deployment to GitLab Pages with environment-specific configurations."];
    "Monitoring" [label="Production Monitoring", type="card", prompt="Implement performance monitoring, error tracking, and production health checks."];
}